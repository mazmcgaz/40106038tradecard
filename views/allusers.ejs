<%- include("partials/header.ejs") %>

<style>
  .action-item {
    background-color: #f6ea9a; /* Grey background */
    border: 1px solid #ced4da; /* Border outline */
    padding: 10px;
    margin-bottom: 20px;
    color: black;
    height: 300px; /* Fixed height for each action item */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .action-item:hover {
    background-color: #e3c416; /* Light grey on hover */
    transform: scale(1.1); /* Enlarge the card on hover */
  }

  .action-item img {
    max-width: 50%; /* Set maximum width for images */
    height: auto; /* Maintain aspect ratio */
  }

  /* Modal styles */
  .modal-dialog {
    max-width: 800px; 
  }
</style>

<main>

<div class="px-4 pt-5 my-5 text-center border-bottom">
  <h1 class="display-4 fw-bold text-body-emphasis">Members</h1>
  <br />

  <% if (userLoggedIn) { %>
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <a href="/views/dashboard" class="btn btn-primary back-to-cards-button"
          >Dashboard</a
        >
      </div>
      <br />
      <br />
      <br />
      <br />
    </div>
  </div>
  <% } else { %>
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <a href="/" class="btn btn-primary back-to-cards-button">Home</a>
      </div>
      <br />
      <br />
      <br />
      <br />
    </div>
  </div>
  <% } %>

  <div class="container">
    <div class="row">
      <!-- Loop through all of the members -->
      <% rowdata.forEach(user => { %>
      <div class="col-md-4">
        <!-- Bootstrap column for each action item -->
        <div class="action-item">
          <!-- User image -->
          <img src="<%= user.user_image %>" alt="<%= user.user_display_name %>" />

          <!-- User display name -->
          <h4><%= user.user_display_name %></h4>

          <!-- View Collections button -->
          <a href="/views/usercollections/<%= user.user_id %>" class="btn btn-primary">View Collections</a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

 
    <!-- Mainh content goes here -->
  </main>

  <%- include("partials/footer.ejs") %>
</div>
